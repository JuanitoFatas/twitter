<div class="max-w-sm w-full my-6">
  <div class="border-r border-b border-l border-gray-400  bg-white rounded-b p-4 leading-normal">
    <div class="mb-8">
      <p class="text-gray-700 text-base"><%= tweet.body %></p>
    </div>
    <p>
      <%= link_to tweet.username, tweet.user, class: "mt-1 text-lg leading-tight font-medium text-gray-900 hover:underline mr-2" %>
      <%= link_to tweet do %>
        <span class="text-gray-600 text-xs">
          <%= time_ago_in_words(tweet.created_at) %> ago
        </span>
      <% end %>
    </p>
  </div>
</div>
